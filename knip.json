{
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "ignore": ["**/test/**/fixtures/**"],
    "workspaces": {
        "packages/integrations/cloudflare": {
            "entry": [
                "src/index.ts",
                "src/entrypoints/*.ts",
                "test/**/*.test.js"
            ],
            "ignoreDependencies": ["cloudflare"]
        },
        "packages/integrations/markdoc": {
            "entry": [
                "src/extensions/*.ts",
                "src/{config,index,runtime,runtime-assets-config}.ts",
                "src/components/index.ts",
                "test/**/*.test.js"
            ]
        },
        "packages/integrations/mdx": {
            "entry": [
                "src/{index,server}.ts",
                "test/**/*.test.js"
            ],
            "ignoreDependencies": ["@types/*"]
        },
        "packages/integrations/netlify": {
            "entry": [
                "src/{index,static,functions,ssr-function,image-service}.ts",
                "test/**/*.test.js"
            ],
            "ignore": ["test/hosted/**"]
        },
        "packages/integrations/node": {
            "entry": [
                "src/{index,server,preview}.ts",
                "test/**/*.test.js"
            ]
        },
        "packages/integrations/partytown": {
            "entry": ["src/index.ts"]
        }
    }
}